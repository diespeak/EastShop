<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:tag="skin:skin_img:background"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimary"
        >
        <com.example.administrator.yitao.entity.CircleImageView
            android:id="@+id/imv_circle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000"
            android:layout_centerInParent="true"
            android:src="@drawable/login_defult_img"
            app:border_width="2dp"
            />
        <TextView
            android:id="@+id/now_login"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/imv_circle"
            android:layout_centerHorizontal="true"
            android:text="登录|注册"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="#f7f3f3"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorGray"
        >

        <LinearLayout
            android:id="@+id/my_news"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorWitgh"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            >

            <TextView
                android:layout_weight="1"
                android:text="个人信息"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"

                android:id="@+id/textView" />

            <ImageView
    android:layout_weight="5"
    android:layout_margin="13dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/item_go_one"

    />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/my_something"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorWitgh"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            >
            <TextView
                android:layout_weight="1"
                android:text="我的商品"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
               />

            <ImageView
                android:layout_weight="5"
                android:layout_margin="13dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/item_go_one"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:id="@+id/my_upsongthing"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorWitgh"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            >
            <TextView
                android:layout_weight="1"
                android:text="上传商品"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                />

            <ImageView
                android:layout_weight="5"
                android:layout_margin="13dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/item_go_one"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">


        </LinearLayout>
    </LinearLayout>

</LinearLayout>